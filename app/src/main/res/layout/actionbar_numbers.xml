<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            style="@style/ActionBarImageStyle"
            android:src="@drawable/icon_numbers"
            android:transitionName="numbers_logo"/>
        <TextView
            style="@style/ActionBarTextStyle"
            android:text="@string/numbers_title"
            android:transitionName="numbers_text" />
    </LinearLayout>
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/text_play_all"
        android:layout_centerVertical="true"
        android:background="@drawable/play"
        android:id="@+id/play_all"/>
    <TextView
        android:id="@+id/text_play_all"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:lines="2"
        android:gravity="center"
        android:text="Play All"/>
</RelativeLayout>