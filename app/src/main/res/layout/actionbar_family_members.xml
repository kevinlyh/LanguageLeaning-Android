<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            style="@style/ActionBarImageStyle"
            android:id="@+id/id_family_members_logo"
            android:src="@drawable/icon_family"
            android:transitionName="family_members_logo"/>
        <TextView
            style="@style/ActionBarTextStyle"
            android:id="@+id/id_family_members_text"
            android:text="@string/family_members_title"
            android:transitionName="family_members_text" />
    </LinearLayout>
</RelativeLayout>